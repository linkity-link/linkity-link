{
  "hosting": {
    "public": "public",
    
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [ 
      //Demos
      //LDP
      {
        "source": "/demo/LDP",
        "destination": "demos/LDP/index.html"
      },
      //Otherwise
      {
      "source": "**",
      "destination": "/index.html"
      }
    ]
  }
}
